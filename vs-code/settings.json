        "Renshaw"
    ],
    "spellchecker.language": "en_GB-ise",
    "editor.minimap.enabled": false,
    "terminal.integrated.inheritEnv": false,
    "python.terminal.activateEnvironment": false,
    "window.zoomLevel": -1
}